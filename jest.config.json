{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": ["<rootDir>/tmp", "<rootDir>/server.js"],
    "moduleFileExtensions": ["js", "mjs", "ts"],
    "transform": {
        "^.+\\.js$": "babel-jest",
        "^.+\\.mjs$": "babel-jest",
        "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "((\\.|/*.)(test))\\.ts?$",
    "modulePathIgnorePatterns": ["<rootDir>/tmp", "<rootDir>/test/norm", "<rootDir>/test/jest"]
}
